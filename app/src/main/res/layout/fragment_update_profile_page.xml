<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_info_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_profile">

        <ImageButton
            android:id="@+id/backbtn_update_profile"
            android:layout_width="52dp"
            android:layout_height="49dp"
            android:background="@drawable/back_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.072"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.034" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/baseline_info_24"
            android:gravity="center_vertical|end"
            android:text="Account Info"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/backbtn_update_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.328"
            app:layout_constraintStart_toEndOf="@+id/backbtn_update_profile"
            app:layout_constraintTop_toTopOf="@+id/backbtn_update_profile"
            app:layout_constraintVertical_bias="0.24" />

        <ImageView
            android:id="@+id/update_profile_pic"
            android:layout_width="119dp"
            android:layout_height="115dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/sample_profile"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="136dp"
            android:text="Edit Account Information"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/backbtn_update_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/backbtn_update_profile"
            app:layout_constraintTop_toBottomOf="@+id/backbtn_update_profile"
            app:layout_constraintVertical_bias="0.037" />

        <EditText
            android:id="@+id/fNAme_update"
            android:layout_width="337dp"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_frame"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_profile_pic" />

        <EditText
            android:id="@+id/gender_signup_update"
            android:layout_width="130dp"
            android:layout_height="58dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_frame"
            android:drawableLeft="@drawable/baseline_gender_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Gender"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fNAme_update"
            app:layout_constraintTop_toBottomOf="@+id/fNAme_update" />

        <EditText
            android:id="@+id/birthdate_update"
            android:layout_width="170dp"
            android:layout_height="58dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_frame"
            android:drawableLeft="@drawable/baseline_bdate_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Birthdate"
            android:inputType="date"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fNAme_update"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/gender_signup_update"
            app:layout_constraintTop_toBottomOf="@+id/fNAme_update"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/username_update"
            android:layout_width="337dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_frame"
            android:drawableLeft="@drawable/baseline_alternate_email_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fNAme_update"
            app:layout_constraintTop_toBottomOf="@+id/birthdate_update" />

        <EditText
            android:id="@+id/login_email_update"
            android:layout_width="337dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_frame"
            android:drawableStart="@drawable/baseline_email"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username_update" />

        <Button
            android:id="@+id/update_account_btn"
            android:layout_width="337dp"
            android:layout_height="74dp"
            android:layout_marginTop="76dp"
            android:backgroundTint="#23AA49"
            android:fontFamily="@font/dm_sans"
            android:letterSpacing=".05"
            android:text="Save"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/login_email_update"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/login_email_update"
            app:layout_constraintTop_toBottomOf="@+id/login_email_update" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>